import numpy as np

rng = np.random.default_rng() # func to generate random numbers
# you can set seeds in () to get the same results over and over again

print(rng.integers(low=1,high= 101, size=(3, 2))) # range, and second num is exclusive, and how many # you want
# size is the dimensions of your desired table


# floating point number = number with a decimal portion

print(np.random.uniform(low=-1, high=1, size=(3, 2))) # generates random number in decimal form

# shuffle arrays

rng = np.random.default_rng()
array = np.array([1, 2, 3, 4, 5])


rng.shuffle(array)

print(array)

# random choice

rng = np.random.default_rng()

fruits = np.array(["apple", "orange", "strawberry", "banana", "coconut"])
fruit = rng.choice(fruits, size=3)


print(fruit)
